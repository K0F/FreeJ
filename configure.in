AC_ARG_WITH(png-static,
[  --with-png-static=PFX   embed the png library statically],
[
AC_MSG_CHECKING(to statically embed png image library)
if test -r "$withval"; then

  if test ! -r "$withval/lib/libpng.a"; then
    echo "!! can't embed static png support: $withval/lib/libpng.a not found"
  elif test ! -r "$withval/include/libpng"; then
    echo "!! can't embed static png support: $withval/include/libpng not found"
  else
    AC_MSG_RESULT(yes)
    AC_DEFINE(WITH_PNG,1,[define if compiling png layer])	
    PNG_LIBS="$withval/lib/libpng.a -lz"
    PNG_CFLAGS="-I$withval/include/libpng"
    have_png=yes
    AC_SUBST(PNG_LIBS)
    AC_SUBST(PNG_CFLAGS)
  fi
 else
   AC_MSG_RESULT(not found)
   echo "!! you need to specify the prefix where to find libpng (i.e. --with-png-static=/usr)"
 fi
],[
  PKG_CHECK_MODULES(PNG, libpng12 >= 1.2.0, [
    AC_DEFINE(WITH_PNG,1,[define if compiling png layer])	
    have_png=yes],have_png=no)
])
 
